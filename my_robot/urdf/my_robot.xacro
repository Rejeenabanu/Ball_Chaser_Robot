<?xml version='1.0'?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  <!-- robot footprint -->
  <link name="robot_footprint"/>

  <!-- CHASSIS -->
  <link name='chassis'>
	<pose>0 0 0.1 0 0 0</pose>

	<inertial>
	  <mass value="15.0"/>
	  <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
	  <inertia
		  ixx="0.1" ixy="0" ixz="0"
		  iyy="0.1" iyz="0"
		  izz="0.1"
	  />
	</inertial>

	<collision name='collision'>
	  <origin xyz="0 0 0" rpy=" 0 0 0"/> 
	  <geometry>
		<box size=".4 .1 .1"/>
	  </geometry>
	</collision>

	<visual name='chassis_visual'>
	  <origin xyz="0 0 0" rpy=" 0 0 0"/>
	  <geometry>
		<box size=".4 .1 .1"/>
	  </geometry>
	  <material name="yellow">
		<color rgba="1 1 0 1"/>
	  </material>
	</visual>

	<!-- Back caster wheel -->
	<collision name='back_caster_collision'>
	  <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
	  <geometry>
		<sphere radius="0.05"/>
	  </geometry>
	</collision>

	<visual name='back_caster_visual'>
	  <origin xyz="-0.15 0 -0.05" rpy=" 0 0 0"/>
	  <geometry>
		<sphere radius="0.05"/>
	  </geometry>
	  <material name="grey">
		<color rgba="0.5 0.5 0.5 1"/>
	  </material>
	</visual>

	<!-- Front caster wheel -->
	<collision name='front_caster_collision'>
	  <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
	  <geometry>
		<sphere radius="0.05"/>
	  </geometry>
	</collision>

	<visual name='front_caster_visual'>
	  <origin xyz="0.15 0 -0.05" rpy=" 0 0 0"/>
	  <geometry>
		<sphere radius="0.05"/>
	  </geometry>
	  <material name="grey">
		<color rgba="0.5 0.5 0.5 1"/>
	  </material>
	</visual>

  </link>

  <!-- LEFT WHEEL LINK -->
  <link name="left_wheel">

	<!-- Inertia -->
	<inertial>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <mass value="5"/>
	  <inertia 
	ixx="0.1" ixy="0"   ixz="0"
	iyy="0.1" iyz="0"   izz="0.1"/>
	</inertial>

	<!-- Collision -->
	<collision>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <geometry>
	<cylinder radius="0.05" length="0.05"/>
	  </geometry>
	</collision>

	<!-- Visual -->
	<visual>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <geometry>
	<cylinder radius="0.05" length="0.05"/>
	  </geometry>
	  <material name="orange">
		<color rgba="1 0.5 0 1"/>
	  </material>
	</visual>

 </link>

  <!-- RIGHT WHEEL LINK -->
 <link name="right_wheel">
	<!-- Inertia -->
	<inertial>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <mass value="5"/>
	  <inertia 
	ixx="0.1" ixy="0"   ixz="0"
	iyy="0.1" iyz="0"   izz="0.1"/>
	</inertial>

	<!-- Collision -->
	<collision>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <geometry>
	<cylinder radius="0.05" length="0.05"/>
	  </geometry>
	</collision>

	<!-- Visual -->
	<visual>
	  <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
	  <geometry>
	<cylinder radius="0.05" length="0.05"/>
	  </geometry>
	 <material name="orange">
		<color rgba="1 0.5 0 1"/>
	  </material>
	</visual>

  </link>


  <!-- CAMERA LINK -->
  <link name="camera">

	<!-- Inertial -->
	<inertial>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <mass value="0.1"/>
	  <inertia 
	ixx="1e-6" ixy="0" ixz="0"
	iyy="1e-6" iyz="0" izz="1e-6"/>
	</inertial>

	<!-- Collision -->
	<collision>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <geometry>
	<box size="0.05 0.05 0.05"/>
	  </geometry>
	</collision>

	<!-- Visual -->
	<visual>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <geometry>
	<box size="0.05 0.05 0.05"/>
	  </geometry>
	  <material name="black">
		<color rgba="0 0 0 1"/>
	  </material>
	</visual>
  </link>

  <!-- HOKUYO LIDAR LINK -->
  <link name="hokuyo">
	<inertial>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <mass value="1e-5"/>
	  <inertia 
	ixx="1e-6" ixy="0" ixz="0"
	iyy="1e-6" iyz="0" izz="1e-6"/>
	</inertial>

	<collision>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <geometry>
	<box size="0.1 0.1 0.1"/>
	  </geometry>
	</collision>

	<visual>
	  <origin xyz="0 0 0" rpy="0 0 0"/>
	  <geometry>
	<mesh filename="package://my_robot/meshes/hokuyo.dae"/>
	  </geometry>
	  <material name="red">
		<color rgba="1 0 0 1"/>
	  </material>
	</visual>
  </link>


  <!-- ============ JOINTS (place AFTER all links) ============ -->

  
	<joint name="robot_footprint_joint" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0" />
		<parent link="robot_footprint"/>
		<child link="chassis" />
	</joint>

	<!-- Left wheel joint -->
	<joint type="continuous" name="left_wheel_hinge">
		<origin xyz="0 0.06 -0.05" rpy="0 0 0"/>
		<child link="left_wheel"/>
		<parent link="chassis"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	 </joint>

	<!-- Right wheel joint -->
	  <joint type="continuous" name="right_wheel_hinge">
		<origin xyz="0 -0.06 -0.05" rpy="0 0 0"/>
		<child link="right_wheel"/>
		<parent link="chassis"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	</joint>

	  <!-- CAMERA FIXED JOINT -->
	  <joint name="camera_joint" type="fixed">
		<origin xyz="0.2 0 0" rpy="0 0 0"/>
		<parent link="chassis"/>
		<child  link="camera"/>
	  </joint>

	<!-- Hokuyo lidar joint - front of chassis -->
	<joint name="hokuyo_joint" type="fixed">
		<origin xyz="0.15 0 0.1" rpy="0 0 0"/>
		<parent link="chassis"/>
		<child  link="hokuyo"/>
	</joint>
  <!-- ============ GAZEBO MATERIALS ============ -->
  <gazebo reference="chassis">
    <material>Gazebo/Yellow</material>
  </gazebo>
  
  <gazebo reference="left_wheel">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="right_wheel">
    <material>Gazebo/Orange</material>
  </gazebo>
  
  <gazebo reference="camera">
    <material>Gazebo/Black</material>
  </gazebo>
  
  <gazebo reference="hokuyo">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>
